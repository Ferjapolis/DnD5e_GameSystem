def print_active(active: Character):
    pass

###################################################################################################
# CREATE_NEW HELPER FUNCTIONS
###################################################################################################

Abilities = namedtuple('Abilities', 'STR DEX CON INT WIS CHA')
def select_abilities():
    while True:
        command = input(ABILITY_INTRO).upper()
        if command == "0":
            return
        else:
            break
    
    while True:
        command = input(ABILITY_ROLL).upper()
        if command == "ROLL":
            rolls = [0,0,0,0,0,0]
            for i in range(6):
                roll = []
                for r in range(4):
                    roll.append(choice([1,2,3,4,5,6]))
                roll.sort(reverse = True)
                for r in range(3):
                    rolls[i] += roll[r]
            abilities = prioritize_abilities(rolls)
        elif command == "STANDARD":
            abilities = prioritize_abilities([15,14,13,12,10,8])
        elif command == "R":
            return
        else:
            print("Invalid command entered. Try Again.\n")
            
def prioritize_abilities(rolls: [int]) -> Abilities:
    while True:
        command = input(ABILITY_PRIORITY.format(scores=rolls)).upper()
        
        abilities = Abilities(0,0,0,0,0,0)
        command.split(' ')
        print("\n\nDEBUG: " + command +'\n\n')
        try:
            for i in range(6):
                abilities.command[i] = rolls[i]
        except:
            print("Invalid command entered. Try Again.\n")
            continue
        return abilities
            


